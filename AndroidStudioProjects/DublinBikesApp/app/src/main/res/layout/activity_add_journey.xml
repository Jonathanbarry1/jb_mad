<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yx_jo.dublinbikesapp.AddJourneyActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <Button
            android:id="@+id/journeyGetButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/choose_stations" />

        <TextView
            android:id="@+id/stationstartName"
            android:textColor="#D3649F"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/stationendName"
            android:textColor="#D3649F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"/>


        <Button
            android:id="@+id/JourneyCamera"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/add_photo" />

        <Button
            android:id="@+id/journeyAddButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/add_the_journey" />

        <ImageView
            android:id="@+id/imageViewJourney"
            android:layout_width="400dp"
            android:layout_height="350dp"
            android:layout_weight="0.96"
            app:srcCompat="@drawable/common_full_open_on_phone" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
